{
  "name": "craft-crm",
  "version": "0.1.0",
  "private": true,
  "description": "Craft CRM - Business Management Application",
  "author": "Fuzegen",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 next build",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron electron/main.js\"",
    "electron-pack": "taskkill /F /IM electron.exe /T & rd /s /q dist && electron-builder",
    "build-electron": "bun run build && electron-builder"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.2",
    "@types/crypto-js": "^4.2.2",
    "@types/jsbarcode": "^3.11.4",
    "@types/papaparse": "^5.3.16",
    "@types/qrcode": "^1.5.5",
    "better-sqlite3": "^9.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "framer-motion": "^12.22.0",
    "html5-qrcode": "^2.3.8",
    "jsbarcode": "^3.12.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.525.0",
    "next": "15.3.4",
    "next-themes": "^0.4.6",
    "node-fetch": "^3.3.2",
    "papaparse": "^5.5.3",
    "qrcode": "^1.5.4",
    "qrcode-generator": "^2.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-grid-layout": "^1.5.2",
    "recharts": "^3.0.2",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-grid-layout": "^1.3.5",
    "autoprefixer": "^10.4.21",
    "canvas": "^3.1.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.4",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.craftcrm.desktop",
    "productName": "Craft CRM",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "package.json",
      "next.config.js",
      "public/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
